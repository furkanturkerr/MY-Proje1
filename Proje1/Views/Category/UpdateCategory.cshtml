@model Entity.Concrete.Category

@{
    Layout = "_adminlayouts";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


<h2>Kategori Ekle</h2>
<br/>
<form class="form-group" method="post">
    @Html.HiddenFor(x => x.CategoryId)
    
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br/>
    @Html.Label("Kateori Açıklaması")
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br/>
    <button class="btn btn-outline-success">Güncelle</button>
</form>